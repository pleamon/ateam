{
  "name": "ateam",
  "version": "0.0.1",
  "description": "项目管理MCP工具后端",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "node dist/main.js",
    "start:dev": "tsx watch src/main.ts",
    "start:debug": "tsx --inspect src/main.ts",
    "start:prod": "node dist/main.js",
    "lint": "eslint \"{src,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:auth": "jest --testPathPattern=auth",
    "test:docs": "jest --testPathPattern=documentation",
    "test:roadmap": "jest --testPathPattern=roadmap",
    "test:run": "tsx src/test/run-tests.ts",
    "test:check": "tsx src/test/run-tests.ts --check",
    "test:summary": "jest --coverage --coverageReporters=text-summary",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset",
    "test:db": "tsx src/test-api.ts",
    "test:api": "tsx src/api-test.ts",
    "test:prisma": "tsx src/test-prisma.ts",
    "test:seed": "tsx src/seed-data.ts",
    "test:demo": "tsx src/demo-data.ts",
    "seed": "tsx src/seed-data.ts",
    "seed:agents": "tsx src/seeds/index.ts",
    "mcp:build": "tsc",
    "mcp:start": "node dist/mcp/index.js",
    "mcp:dev": "tsx src/mcp/index.ts",
    "mcp:test": "tsx src/mcp/test.ts"
  },
  "prisma": {
    "schema": "./prisma/"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/helmet": "^11.1.1",
    "@fastify/jwt": "^9.1.0",
    "@fastify/swagger": "^8.14.0",
    "@fastify/swagger-ui": "^2.1.0",
    "@modelcontextprotocol/sdk": "^1.16.0",
    "@prisma/adapter-pg": "^6.12.0",
    "@prisma/client": "^6.12.0",
    "@types/bcryptjs": "^3.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "fastify": "^4.26.1",
    "fastify-plugin": "^5.0.1",
    "jsonwebtoken": "^9.0.2",
    "prisma": "^6.12.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "tsx": "^4.7.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  }
}